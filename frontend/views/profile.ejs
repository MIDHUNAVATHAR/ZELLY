<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 p-4">

  <!-- Header -->
  <%- include("partials/header") %>

  <div class="max-w-4xl mx-auto bg-white shadow-md rounded p-6 mt-4">
    <h2 class="text-2xl font-bold mb-4">Profile</h2>
    <form id="profileForm" enctype="multipart/form-data">
      <div class="mb-4">
        <label class="block text-gray-700">Profile Photo</label>
        <input type="file" name="photo" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none">
        <% if (user.photo) { %>
          <img src="<%= user.photo %>" alt="Profile Photo" class="mt-2 w-32 h-32 rounded-full object-cover">
        <% } %>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">First Name</label>
        <input type="text" name="firstName" value="<%= user.firstName %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Last Name</label>
        <input type="text" name="lastName" value="<%= user.lastName %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Address</label>
        <input type="text" name="address" value="<%= user.address %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Mobile Number 1</label>
        <input type="text" name="mobile1" value="<%= user.mobile1 %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Mobile Number 2</label>
        <input type="text" name="mobile2" value="<%= user.mobile2 %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Pin Number</label>
        <input type="text" name="pin" value="<%= user.pin %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">City</label>
        <input type="text" name="city" value="<%= user.city %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">Street</label>
        <input type="text" name="street" value="<%= user.street %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">District</label>
        <input type="text" name="district" value="<%= user.district %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="mb-4">
        <label class="block text-gray-700">State</label>
        <input type="text" name="state" value="<%= user.state %>" class="block w-full px-4 py-2 mt-2 border rounded-lg focus:outline-none focus:ring-1 focus:ring-blue-600">
      </div>
      <div class="flex justify-end">
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Update Profile</button>
      </div>
    </form>
  </div>

  <!-- Footer -->
  <%- include("partials/footer") %>

  <script>
    document.getElementById('profileForm').addEventListener('submit', async function(event) {
      event.preventDefault();

      const formData = new FormData(this);
      const response = await fetch('/profile', {
        method: 'POST',
        body: formData
      });

      if (response.ok) {
        alert('Profile updated successfully!') ; 
        alert('Failed to update profile.');
      }
    });
  </script>
</body>
</html>
