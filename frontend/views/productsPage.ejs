<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="">

    <!--header-->
    <%- include("partials/header") %> 
    <!--header-->
    
    <!--main-->
    <div class="container mx-auto mb-20 px-4 py-8">

        <div class="flex ">
            <!-- Filters -->
            <div class="w-1/4 pr-4">
               
                <div class="space-y-4">
                    <div class="border-b ">
                        <h2 class="text-xl font-bold mb-6 text-gray-500">Sorting</h2>
                        <!--price-->
                      <div id="price border-b pb-2 ">
                        <button class="sort-toggler flex justify-between items-center w-full">
                            <span class="text-xl font-bold">Price </span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="sort-button h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </button>
                     
                        <div  class="sort-options hidden">
                            <label><input type="radio"  name="sort" class="radio-sort" value="low-to-high"> Low to High</label> 
                            <br>
                            <label><input type="radio"  name="sort" class="radio-sort" value="high-to-low"> High to Low</label>
                        </div>
                      </div>
                        
                      <br>

       <!--sorting-->
       <div id="namesort border-b pb-2 ">
        <button class="sort-toggler flex justify-between items-center w-full">
            <span class="text-xl font-bold">Name </span>
            <svg xmlns="http://www.w3.org/2000/svg" class="sort-button h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
     
        <div  class="sort-options hidden">
            <label><input type="checkbox"  class="name-sort" value="a-z"> aA - zZ</label> 
            <br>
            <label><input type="checkbox"  class="name-sort" value="z-a"> zZ - aA</label>
        </div>
      </div>


      <br>
      <h2 class="text-xl font-bold mb-6 text-gray-500">Filter</h2>
      

                        <!--status-->
                        <div id="status border-b mt-4 pb-2">
                            <button class="sort-toggler flex justify-between items-center w-full">
                                <span class="text-xl font-bold">Status </span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="sort-button h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                         
                            <div  class="sort-options hidden">
                                <label><input type="checkbox" class="status"  value="available"> Available</label>
                                <br>
                                <label><input type="checkbox" class="status"  value="unavailable"> Out of Stock</label>
                            </div>
                        </div>


                        <br>
                 
                        <!--ratings-->
                        <div id="rating border-b pb-2 ">
                            <button class="sort-toggler flex justify-between items-center w-full">
                                <span class="text-xl font-bold">Customer Ratings </span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="sort-button h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                         
                            <div  class="sort-options hidden">
                                <label><input type="checkbox"  class="rating" value="a-z"> 4 star & above</label> 
                                <br>
                                <label><input type="checkbox"  class="rating" value="z-a"> 3 star & above </label>
                                
                            </div>
                          </div>
                     <br>

                    <!--category--> 
                    <div id="category">
                         <button class="sort-toggler flex justify-between items-center w-full">
                          <span class="text-xl font-bold">Categories </span>
                          <svg xmlns="http://www.w3.org/2000/svg" class="sort-button h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                          </svg>
                     </button>
                    
                      <div  class="sort-options hidden">
                        <% if(genderCategory && genderCategory.length > 0) { %>
                            <% genderCategory.forEach(category => { %>
                                <label><input type="checkbox"  class="category" value="<%= category._id%>"  > <%= category.name%> </label> 
                                <br>
                            <%}) %>
                        <% } %>

                                
                       </div>
                     </div>

                    </div>
                </div>
            </div>

            <!-- Product Grid -->
      
     <div class="w-3/4">
       <div class="grid grid-cols-3 gap-4 pr-5 pt-5">
           <% if(products && products.length > 0) { %>
               <% products.forEach(product => { %>
                <a href="/product/<%= product._id %>">
                   <div class="bg-white rounded-lg shadow-md overflow-hidden">
                       <img src="<%= product.images[0] %>" alt="Product Image" class="w-full h-64 object-cover">
                       <div class="p-4">
                           <h3 class="font-semibold"><%= product.title %></h3>
                           <p class="text-sm text-gray-600"><%= product.productDescription || 'No description available' %></p>
                           <p class="text-sm text-gray-600"><%= product.titleDescription || 'No description available' %></p>
                           <div class="mt-2 flex items-center justify-between">
                            <% if (product.sizes[0]) { %>
                                <span class="font-bold">RS <%= product.sizes[0].discountedPrice %></span>
                                <span class="text-gray-500 line-through">RS <%= product.sizes[0].price %></span>
                               <span class="text-green-500 font-semibold"><%= product.sizes[0].discountedPercentage %> % OFF</span>
                            <% } %>
                               
                           </div>
                       </div>
                   </div>
                </a> 
               <% }) %>
           <% } else { %>
               <p>No products available</p>
           <% } %>
       </div>
      </div>

        </div>

      
    </div>
    <!--main-->

    <!--footer-->
  <%- include("partials/footer") %>
  <!--footer-->


  <script>
    document.addEventListener("DOMContentLoaded" , function(){
        let toggler = document.querySelectorAll(".sort-toggler"); 
        let sortOption = document.querySelectorAll(".sort-options"); 
        let sortBtn   = document.querySelectorAll(".sort-button") ;
        let priceRadio = document.querySelectorAll(".radio-sort");
        let status = document.querySelectorAll(".status");
        let nameSort = document.querySelectorAll(".name-sort");
        let category = document.querySelectorAll(".category");
        let currentUrl = new URL (window.location.href) ;  

        //toggler
        for(let i = 0 ; i< toggler.length ; i++){
            toggler[i].addEventListener("click" , function(){
                sortOption[i].classList.toggle("hidden" );
                sortBtn[i].classList.toggle('rotate-180') ; 
            })
        }

        //price radio
        for(let i=0 ; i< priceRadio.length ; i++){
            priceRadio[i].addEventListener("click" , function(event){
                if(currentUrl.searchParams.get("price") == event.target.value){
                    currentUrl.searchParams.delete("price");
                }else{
                currentUrl.searchParams.set("price",event.target.value); 
                currentUrl.searchParams.delete("namesort");
                }
                window.location.href = currentUrl ;
            
            })
        }


        //check the radio button in frontend
        let price = currentUrl.searchParams.get("price");
        
        if(price == 'low-to-high'){
            document.getElementsByClassName("radio-sort")[0].setAttribute("checked" , 'true') ; 
        }else if(price == 'high-to-low'){
            document.getElementsByClassName("radio-sort")[1].setAttribute("checked" , 'true') ; 
        }else{
            
        }


        //status checkbox
        for(let i=0 ; i< status.length ; i++){
            status[i].addEventListener("click" , function(event){
                if(currentUrl.searchParams.get("status") == event.target.value){
                    currentUrl.searchParams.delete("status");
                }else{
                currentUrl.searchParams.set("status",event.target.value);
                }
                window.location.href = currentUrl ;
            
            })
        }

           //check the status
           let stat = currentUrl.searchParams.get("status");
        
        if(stat == 'available'){
            status[0].setAttribute("checked" , 'true') ; 
        }else if(stat == 'unavailable'){
            status[1].setAttribute("checked" , 'true') ; 
        }else{
            
        }


        
        //namesort checkbox
        for(let i=0 ; i< nameSort.length ; i++){
            nameSort[i].addEventListener("click" , function(event){
                if(currentUrl.searchParams.get("namesort") == event.target.value){
                    currentUrl.searchParams.delete("namesort");
                }else{
                currentUrl.searchParams.set("namesort",event.target.value);
                currentUrl.searchParams.delete("price");
                }
                window.location.href = currentUrl ;
            
            })
        }

           //check the status
           let sort = currentUrl.searchParams.get("namesort");
        
        if(sort == 'a-z'){
            nameSort[0].setAttribute("checked" , 'true') ; 
        }else if(sort == 'z-a'){
            nameSort[1].setAttribute("checked" , 'true') ; 
        }else{
            
        }


    //category
         
         for(let i=0 ; i< category.length ; i++){
            category[i].addEventListener("click" , function(event){
                if(currentUrl.searchParams.get("category") == event.target.value){
                    currentUrl.searchParams.delete("category");
                }else{
                currentUrl.searchParams.set("category",event.target.value);
                }
                window.location.href = currentUrl ;
            
            })
        }

        const cat = currentUrl.searchParams.get("category") ;
        if(cat){
            document.querySelector(`input[type="checkbox"][value="${cat}"]`).checked = true ;
        }


        //remove the category filter if the subcagerory query available
        const subcagerory = currentUrl.searchParams.get("subcategoryId");
        if(subcagerory){
            document.getElementById("category").classList.add("hidden");
        }


    })
  </script>
</body>
</html>