<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Listing</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="">

    <!--header-->
    <%- include("partials/header") %> 
    <!--header-->
    
    <!--main-->
    <div class="container mx-auto mb-20 px-4 py-8">
        <header class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold">Product</h1>
            <div class="flex items-center">
                <span class="mr-2">Sort</span>
                <select class="border rounded p-1">
                    <option>Default</option>
                </select>
                <button class="ml-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
            </div>
        </header>

        <div class="flex">
            <!-- Filters -->
            <div class="w-1/4 pr-4">
                <h2 class="text-lg font-semibold mb-4">Filters</h2>
                <div class="space-y-4">
                    <% ['Color', 'Size', 'Price', 'Discount Range', 'Availability'].forEach(filter => { %>
                        <div class="border-b pb-2">
                            <button class="flex justify-between items-center w-full">
                                <span><%= filter %></span>
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </button>
                        </div>
                    <% }) %>
                </div>
            </div>

            <!-- Product Grid -->
      
     <div class="w-3/4">
       <div class="grid grid-cols-3 gap-4 pr-5">
           <% if(products && products.length > 0) { %>
               <% products.forEach(product => { %>
                <a href="/product/<%= product._id %>">
                   <div class="bg-white rounded-lg shadow-md overflow-hidden">
                       <img src="<%= product.images[0] %>" alt="Product Image" class="w-full h-64 object-cover">
                       <div class="p-4">
                           <h3 class="font-semibold"><%= product.title %></h3>
                           <p class="text-sm text-gray-600"><%= product.productDescription || 'No description available' %></p>
                           <p class="text-sm text-gray-600"><%= product.titleDescription || 'No description available' %></p>
                           <div class="mt-2 flex items-center justify-between">
                               <span class="font-bold">RS <%= product.sizes[0].discountedPrice %></span>
                               <span class="text-gray-500 line-through">RS <%= product.sizes[0].price %></span>
                               <span class="text-green-500 font-semibold"><%= product.sizes[0].discountedPercentage %> % OFF</span>
                           </div>
                       </div>
                   </div>
                </a>
               <% }) %>
           <% } else { %>
               <p>No products available</p>
           <% } %>
       </div>
      </div>

        </div>

      
    </div>
    <!--main-->

    <!--footer-->
  <%- include("partials/footer") %>
  <!--footer-->


</body>
</html>