<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-black"> 

  <!--header-->
  <%- include("partials/header") %> 
  <!--header-->

  <!--breadcrumb-->
  <nav class="text-sm mb-4 pl-10 pt-5" aria-label="Breadcrumb">
    <ol class="list-reset inline-flex items-center space-x-2">
        <li>
            <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
        </li>
        <li>
            <span class="text-gray-500">/</span>
        </li>
        <li>
            <a href="/account" class="text-gray-600 hover:text-gray-900">My Account</a>
        </li>
        <li>
            <span class="text-gray-500">/</span>
        </li>
        <li class="text-gray-500">
            My Orders
        </li>
    </ol>
</nav>
<!--breadcrumb-->



<!--main-->
<div class="container mx-auto mt-8">
        <div class="flex ">
            <!-- Filters Sidebar -->
            <div class="w-1/4 bg-white p-4 rounded-lg shadow-md pl-10">
                <h2 class="font-semibold text-lg mb-4">Filters</h2>
                <div class="mb-6">
                    <h3 class="font-medium mb-2">ORDER STATUS</h3>
                    <div class="flex items-center mb-2">
                        <input type="checkbox" id="onTheWay" class="mr-2">
                        <label for="onTheWay">On the way</label>
                    </div>
                    <div class="flex items-center mb-2">
                        <input type="checkbox" id="delivered" class="mr-2">
                        <label for="delivered">Delivered</label>
                    </div>
                    <div class="flex items-center mb-2">
                        <input type="checkbox" id="cancelled" class="mr-2">
                        <label for="cancelled">Cancelled</label>
                    </div>
                    <div class="flex items-center mb-2">
                        <input type="checkbox" id="returned" class="mr-2">
                        <label for="returned">Returned</label>
                    </div>
                </div>
                <div>
                    <h3 class="font-medium mb-2">ORDER TIME</h3>
                    <div class="flex items-center mb-2">
                        <input type="checkbox" id="last30Days" class="mr-2">
                        <label for="last30Days">Last 30 days</label>
                    </div>
              
                    <% years.forEach ( year => { %>
                      <div class="flex items-center mb-2">
                        <input type="checkbox" id="year <% year %>" >
                        <label for = "year <% year %>" ><%= year %></label>
                      </div>
                    <% }) %>

                    <div class="flex items-center mb-2">
                        <input type="checkbox" id="older" class="mr-2">
                        <label for="older">Older</label>
                    </div>
                </div>
            </div>

            <!-- Orders Content -->
            <div class="w-4/6 ml-8">
                <div class="flex items-center mb-6">
                    <input type="text" id="searchInput" class="w-full p-2 border border-gray-300 rounded-lg" placeholder="Search your orders here">
                    <button class="ml-4 px-4 py-2 bg-blue-600 text-white rounded-lg w-30">Search </button>
                </div>

                <div id="orderList">
                    <% if (orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <div class="bg-white p-4 rounded-lg shadow-md mb-4 flex">
                                <img src="<%= order.productImage %>" alt="<%= order.productName %>" class="w-16 h-16 object-cover rounded-lg mr-4">
                                <div class="flex-1">
                                    <p class="text-lg font-semibold"><%= order.productName %></p>
                                    <p class="text-gray-600">Color: <%= order.color %>, Size: <%= order.size %></p>
                                    <p class="text-xl font-bold mt-2">â‚¹<%= order.price %></p>
                                </div>
                                <div class="text-right">
                                    <% if (order.status === 'Delivered') { %>
                                        <p class="text-green-500 font-semibold">Delivered on <%= order.deliveryDate %></p>
                                        <a href="#" class="text-blue-500 underline">Rate & Review Product</a>
                                    <% } else if (order.status === 'Cancelled') { %>
                                        <p class="text-red-500 font-semibold">Cancelled on <%= order.cancellationDate %></p>
                                        <p class="text-gray-600"><%= order.cancellationReason %></p>
                                    <% } else { %>
                                        <p class="text-yellow-500 font-semibold"><%= order.status %> on <%= order.updateDate %></p>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <p class="text-center text-gray-600">No orders</p>
                    <% } %>
                </div>
            </div>
        </div>
</div>
<!--main-->


  <!--footer-->
  <%- include("partials/footer") %>
  <!--footer-->
</body>
</html>