<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.name %> | Product Details</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">


  <!-- Header --> 
  <%- include("partials/header") %> 

<!-- Check if the product exists -->
<% if (product) { %>
    <!-- Product Details -->
    <div class="container mx-auto mt-8">
      <div class="bg-white p-8 shadow-md rounded">
        <div class="flex">
          <!-- Product Image -->
          <div class="w-1/2">
            <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-auto rounded-lg">
            <div class="flex mt-4 space-x-2">
              <% product.otherImages.forEach(image => { %>
                <img src="<%= image %>" alt="Product Image" class="w-16 h-16 rounded-lg cursor-pointer hover:opacity-75">
              <% }) %>
            </div>
          </div>
  
          <!-- Product Info -->
          <div class="w-1/2 pl-8">
            <h1 class="text-3xl font-bold mb-4"><%= product.name %></h1>
            <p class="text-lg text-green-600 mb-2">
              Rs <%= product.price %> 
              <span class="line-through text-gray-500">Rs <%= product.originalPrice %></span> 
              <span class="text-yellow-500">(<%= product.discount %> OFF)</span>
            </p>
            <div class="flex items-center mb-4">
              <span class="text-yellow-500"><%= product.rating %> ⭐</span>
              <p class="ml-2 text-gray-600"><%= product.reviews %> reviews</p>
            </div>
  
            <div class="flex items-center space-x-4 mb-4">
              <span class="font-bold">Size:</span>
              <select class="border border-gray-300 rounded px-4 py-2">
                <% product.sizes.forEach(size => { %>
                  <option value="<%= size %>"><%= size %></option>
                <% }) %>
              </select>
            </div>
  
            <div class="flex items-center space-x-4">
              <button class="bg-green-600 text-white px-6 py-2 rounded hover:bg-green-700">Add to Cart</button>
              <button class="bg-purple-600 text-white px-6 py-2 rounded hover:bg-purple-700">Add to Wishlist</button>
            </div>
  
            <div class="mt-8">
              <h2 class="text-xl font-bold mb-2">Highlights</h2>
              <ul class="list-disc list-inside">
                <% product.highlights.forEach(highlight => { %>
                  <li class="text-gray-700"><%= highlight %></li>
                <% }) %>
              </ul>
            </div>
  
            <div class="mt-8">
              <h2 class="text-xl font-bold mb-2">Details</h2>
              <p class="text-gray-700"><%= product.details %></p>
            </div>
          </div>
        </div>
      </div>
  
      <!-- Product Ratings and Reviews -->
      <div class="bg-white p-8 mt-8 shadow-md rounded">
        <h2 class="text-2xl font-bold mb-4">Recent Reviews & Ratings</h2>
        <div class="flex items-center mb-4">
          <div class="w-1/3">
            <div class="flex items-center mb-2">
              <span class="text-yellow-500"><%= product.rating %> ⭐</span>
              <p class="ml-2 text-gray-600"><%= product.totalRatings %> Ratings</p>
            </div>
            <div>
              <% for (let i = 5; i >= 1; i--) { %>
                <div class="flex items-center mb-1">
                  <span class="w-10 text-right"><%= i %> ★</span>
                  <div class="w-full bg-gray-300 rounded h-3 mx-2">
                    <!-- <div class="bg-yellow-500 h-3 rounded" style="width: <%= product.ratings[i] %>%"></div> -->
                  </div>
                  <span><%= product.ratings[i] %></span>
                </div>
              <% } %>
            </div>
          </div>
          <div class="w-2/3">
            <h3 class="font-bold mb-2">Customer Reviews (<%= product.reviews %>)</h3>
            <% product.customerReviews.forEach(review => { %>
              <div class="mb-4">
                <p class="text-sm text-yellow-500"><%= review.rating %> ⭐</p>
                <p class="text-gray-800"><%= review.text %></p>
                <p class="text-gray-500 text-sm">- <%= review.author %>, <%= review.date %></p>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  
  <% } else { %>
    <!-- No Product Found Message -->
    <div class="container mx-auto mt-8">
      <div class="bg-white p-8 shadow-md rounded text-center">
        <h1 class="text-3xl font-bold mb-4">No Product Found</h1>
        <p class="text-gray-600">We couldn't find the product you're looking for. Please try again later or browse other products.</p>
      </div>
    </div>
  <% } %>
  
  <!-- Footer -->
  <%- include("partials/footer") %>

</body>
</html>

