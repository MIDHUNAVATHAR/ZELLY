<div id="product-category" class="w-full bg-white">
  <div class="max-w-full ">
    <div class="grid grid-cols-5  ">  
      <% producatAndSubCat.forEach( ({productCategory , subCategories }) => { %>
        <div class="bg-white px-5 overflow-hidden">
          <div class=" p-4">
            <h2 class="text-gray-900"><%= productCategory.name %></h2>
          </div>
          <div class="p-4">
            <ul class="space-y-2">
               
              <% subCategories.forEach(subcategoryName => { %>  
                <a href="/products?subcategoryId=<%= subcategoryName._id%>"><li class="text-gray-500 hover:text-blue-500 cursor-pointer"> 
                  <%= subcategoryName.name %> 
                </li></a>
              <% }) %>
            </ul>
          </div> 
        </div>
      <% }) %>
    </div>
  </div>
</div> 
  
 
