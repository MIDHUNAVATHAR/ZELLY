<div id="product-category" class="w-full bg-white">
    <div class="max-w-full ">
      <div class="grid grid-cols-5  ">  
        <% Object.keys(categories).forEach(categoryName => { %>
          <div class="bg-white px-5 overflow-hidden">
            <div class=" p-4">
              <h2 class="text-gray-900"><%= categoryName %></h2>
            </div>
            <div class="p-4">
              <ul class="space-y-2">
                <% categories[categoryName].forEach(subcategoryName => { %>  
                  <li class="text-gray-500 hover:text-blue-500 cursor-pointer"> 
                    <%= subcategoryName %> 
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>
  
 
