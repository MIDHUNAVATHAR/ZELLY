<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="">

  <!-- Header --> 
  <%- include("partials/header") %> 
  <!--Header-->

    <div class="container mx-auto px-4 py-8 max-w-3xl">
        <!-- Checkout Steps -->
        <div class="flex justify-between mb-8">
            <% ['LOGIN', 'DELIVERY ADDRESS', 'ORDER SUMMARY', 'PAYMENT'].forEach((step, index) => { %>
                <div class="flex items-center">
                    <div class="w-8 h-8 rounded-full <%= index < 2 ? 'bg-blue-500 text-white' : 'bg-gray-300 text-gray-600' %> flex items-center justify-center font-bold">
                        <%= index + 1 %>
                    </div>
                    <span class="ml-2 text-sm font-medium <%= index < 2 ? 'text-blue-500' : 'text-gray-500' %>"><%= step %></span>
                </div>
                <% if (index < 3) { %>
                    <div class="flex-grow border-t border-gray-300 mx-4 mt-4"></div>
                <% } %>
            <% }) %>
        </div>

        <!-- Login Section -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-4">
            <div class="flex justify-between items-center">
                <div>
                    <h2 class="text-lg font-semibold mb-1">1 LOGIN <span class="text-green-500">âœ“</span></h2>
                    <p class="text-gray-600">+918138990315</p>
                </div>
                <button class="text-blue-500 hover:text-blue-600">CHANGE</button>
            </div>
        </div>

        <!-- Delivery Address Section -->
        <div class="bg-blue-500 text-white shadow-md rounded-lg p-6 mb-4">
            <h2 class="text-lg font-semibold mb-4">2 DELIVERY ADDRESS</h2>
            
            <!-- Address Option 1 -->
            <div class="bg-white text-gray-800 rounded-lg p-4 mb-4">
                <div class="flex items-center mb-2">
                    <input type="radio" name="address" class="mr-2">
                    <span class="font-semibold">Midhun</span>
                    <span class="ml-2 text-gray-500">HOME</span>
                    <span class="ml-2">8138990315</span>
                </div>
                <p class="text-sm">Kichu nivas arumalloor, kandala p. O, Arumalloor, TRIVANDRUM, Kerala - 695512</p>
            </div>

            <!-- Address Option 2 (Selected) -->
            <div class="bg-blue-100 text-gray-800 rounded-lg p-4 mb-4">
                <div class="flex items-center justify-between mb-2">
                    <div class="flex items-center">
                        <input type="radio" name="address" class="mr-2" checked>
                        <span class="font-semibold">MIDHUN M</span>
                        <span class="ml-2 text-gray-500">HOME</span>
                        <span class="ml-2">8138990315</span>
                    </div>
                    <button class="text-blue-500 hover:text-blue-600">EDIT</button>
                </div>
                <p class="text-sm mb-4">Kichu Nivas Arumalloor Kandala p.o, Neyyattinkara Subdistrict, Thiruvananthapuram District, Kerala - 695512</p>
                <button class="bg-orange-500 text-white py-2 px-4 rounded hover:bg-orange-600">DELIVER HERE</button>
            </div>
        </div>

        <!-- Add New Address -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-4">
            <button class="text-blue-500 hover:text-blue-600 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add a new address
            </button>
        </div>

        <!-- Order Summary Section -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-4">
            <h2 class="text-lg font-semibold mb-1">3 ORDER SUMMARY</h2>
        </div>

        <!-- Payment Options Section -->
        <div class="bg-white shadow-md rounded-lg p-6">
            <h2 class="text-lg font-semibold mb-1">4 PAYMENT OPTIONS</h2>
        </div>
    </div>

  <!-- Footer -->
  <%- include("partials/footer") %>
  <!-- Footer-->

</body>
</html>

  